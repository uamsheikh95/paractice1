<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- Form View -->
    <record id="saving_transaction_view_form" model="ir.ui.view">
        <field name="name">saving_account.saving_transaction.form</field>
        <field name="model">saving_account.transaction</field>
        <field name="arch" type="xml">
            <form string="Saving Type Form">
                <header>
                    <button string="Confirm" type="object" name="action_post" invisible="state != 'draft'" class="oe_highlight"/>
                    <button string="Cancel" type="object" name="action_cancel" invisible="state == 'cancel'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="account_id"/>
                            <field name="destination_account_id" invisible="transaction_type != 'account_to_account'" required="transaction_type == 'account_to_account'"/>
                            <field name="transaction_type" invisible="1"/>
                        </group>
                        <group>
                            <field name="journal_id"/>
                            <field name="amount"/>
                            <field name="move_id"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <!-- List View -->
    <record id="saving_transaction_view_list" model="ir.ui.view">
        <field name="name">saving_account.saving_transaction.list</field>
        <field name="model">saving_account.transaction</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="account_id"/>
                <field name="date"/>
                <field name="amount" sum="amount"/>
                <field name="currency_id" optional="hide"/>
            </list>
        </field>
    </record>
    <!-- Actions -->
    <record model="ir.actions.act_window" id="saving_transaction_deposit_action">
        <field name="name">Deposits</field>
        <field name="res_model">saving_account.transaction</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('transaction_type','=', 'deposit')]</field>
        <field name="context">{'default_transaction_type': 'deposit'}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                    Click to create a new transaction.
                </p>
        </field>
    </record>
    <record model="ir.actions.act_window" id="saving_transaction_withdrawal_action">
        <field name="name">Withdrawals</field>
        <field name="res_model">saving_account.transaction</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('transaction_type','=', 'withdrawal')]</field>
        <field name="context">{'default_transaction_type': 'withdrawal'}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                    Click to create a new transaction.
                </p>
        </field>
    </record>
    <record model="ir.actions.act_window" id="saving_transaction_acc_to_acc_action">
        <field name="name">Account to Account</field>
        <field name="res_model">saving_account.transaction</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('transaction_type','=', 'account_to_account')]</field>
        <field name="context">{'default_transaction_type': 'account_to_account'}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                    Click to create a new transaction.
                </p>
        </field>
    </record>
</odoo>